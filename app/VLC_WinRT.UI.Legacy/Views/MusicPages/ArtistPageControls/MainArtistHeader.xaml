<UserControl x:Class="VLC_WinRT.UI.Legacy.Views.MusicPages.ArtistPageControls.MainArtistHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="VLC_WinRT.UI.Legacy.Views.MusicPages.ArtistPageControls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:userControls="using:VLC_WinRT.Views.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">
    <Grid x:Name="HeaderGrid"
          Background="{ThemeResource ApplicationPageBackgroundThemeColor}"
          RequestedTheme="Dark">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{StaticResource FrameMarginGridLength}" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Image Grid.ColumnSpan="6"
               Source="{Binding CurrentArtist.ArtistImage}"
               Opacity="0.5"
               Stretch="UniformToFill"
               VerticalAlignment="Center" />
        <AppBarButton x:Name="BackButton"
                      Grid.Column="1"
                      Style="{StaticResource AppBarButtonStyleHorizontal}"
                      FontSize="20"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Stretch"
                      DataContext="{Binding Source={StaticResource Locator}, Path=MainVM}"
                      Command="{Binding GoBackCommand}">
            <AppBarButton.Icon>
                <FontIcon Glyph="{StaticResource PreviousPageSymbol}"
                          FontFamily="{StaticResource VLCFont}" />
            </AppBarButton.Icon>
        </AppBarButton>

        <TextBlock Grid.Column="2"
                   TextTrimming="CharacterEllipsis"
                   TextWrapping="NoWrap"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Left"
                   Margin="{StaticResource FrameMarginBottom}"
                   Text="{Binding CurrentArtist.Name, Converter={StaticResource ArtistStringConverter}}"
                   Style="{StaticResource SubheaderTextBlockStyle}"
                   FontSize="36" />

        <AppBarButton Grid.Column="3"
                      x:Name="PlayButton"
                      Style="{StaticResource AppBarButtonStyleHorizontal}"
                      Label="{Binding Source={StaticResource Strings}, Path=PlayAll}"
                      Command="{Binding Source={StaticResource Locator}, Path=MusicLibraryVM.PlayArtistAlbumsCommand}"
                      CommandParameter="{Binding CurrentArtist}"
                      Foreground="{ThemeResource MainColor}"
                      VerticalAlignment="Bottom"
                      Margin="{StaticResource FrameMarginBothSides}">
            <AppBarButton.Icon>
                <FontIcon Glyph="{StaticResource PlaySymbol}"
                          FontFamily="{StaticResource VLCFont}" />
            </AppBarButton.Icon>
        </AppBarButton>
        <AppBarButton Grid.Column="4"
                      x:Name="MoreAboutButton"
                      Style="{StaticResource AppBarButtonStyleHorizontal}"
                      Label="{Binding Source={StaticResource Strings}, Path=MoreInfo}"
                      Command="{Binding CurrentArtist.NavigateArtistInfoView}"
                      VerticalAlignment="Bottom"
                      Margin="{StaticResource FrameMarginBothSides}">
            <AppBarButton.Icon>
                <FontIcon Glyph="{StaticResource BuddySymbol}"
                          FontFamily="{StaticResource VLCFont}" />
            </AppBarButton.Icon>
        </AppBarButton>
        <AppBarButton Grid.Column="5"
                      x:Name="PinButton"
                      Style="{StaticResource AppBarButtonStyleHorizontal}"
                      IsCompact="True"
                      Icon="{Binding CurrentArtist.IsPinned, Converter={StaticResource PinConverter}, ConverterParameter='icon'}"
                      Command="{Binding CurrentArtist.PinArtistCommand}"
                      CommandParameter="{Binding CurrentArtist}"
                      VerticalAlignment="Bottom"
                      Margin="{StaticResource FrameMarginBothSides}" />
        <AppBarButton x:Name="MenuButton"
                      Grid.Column="5"
                      Visibility="Collapsed"
                      Style="{StaticResource AppBarButtonStyleHorizontal}"
                      IsCompact="True"
                      VerticalAlignment="Bottom"
                      Margin="{StaticResource FrameMarginBothSides}">
            <AppBarButton.Icon>
                <FontIcon Glyph="{StaticResource ChevronToBottomSymbol}"
                          FontFamily="{StaticResource VLCFont}" />
            </AppBarButton.Icon>
            <AppBarButton.Flyout>
                <MenuFlyout Placement="Bottom">
                    <MenuFlyoutItem Text="{Binding Source={StaticResource Strings}, Path=MoreInfo}"
                                    Command="{Binding CurrentArtist.NavigateArtistInfoView}"
                                    Style="{StaticResource MenuFlyoutItemIconTemplate}"
                                    Tag="{StaticResource BuddySymbol}"
                                    Foreground="White" />
                    <MenuFlyoutItem Text="{Binding Source={StaticResource Strings}, Path=PinArtist}"
                                    Command="{Binding CurrentArtist.PinArtistCommand}"
                                    CommandParameter="{Binding CurrentArtist}"
                                    Style="{StaticResource MenuFlyoutItemIconTemplate}"
                                    Tag="{StaticResource PinSymbol}"
                                    Foreground="White" />
                </MenuFlyout>
            </AppBarButton.Flyout>
        </AppBarButton>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="Tall">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="HeaderGrid"
                                                       Storyboard.TargetProperty="Height">
                            <DiscreteObjectKeyFrame Value="250"
                                                    KeyTime="0" />
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
                <VisualState x:Name="Tiny">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="HeaderGrid"
                                                       Storyboard.TargetProperty="Height">
                            <DiscreteObjectKeyFrame Value="125"
                                                    KeyTime="0" />
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
            <VisualStateGroup>
                <VisualState x:Name="Snap">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="MenuButton"
                                                       Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame Value="Visible"
                                                    KeyTime="0" />
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PinButton"
                                                       Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame Value="Collapsed"
                                                    KeyTime="0" />
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="MoreAboutButton"
                                                       Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame Value="Collapsed"
                                                    KeyTime="0" />
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
                <VisualState x:Name="Wide">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="MenuButton"
                                                       Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame Value="Collapsed"
                                                    KeyTime="0" />
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PinButton"
                                                       Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame Value="Visible"
                                                    KeyTime="0" />
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="MoreAboutButton"
                                                       Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame Value="Visible"
                                                    KeyTime="0" />
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</UserControl>
