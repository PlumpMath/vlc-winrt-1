<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="using:VLC_WinRT.Resources.Templates"
                    xmlns:controls="using:VLC_WinRT.Controls"
                    xmlns:userControls="using:VLC_WinRT.Views.UserControls">

    <DataTemplate x:Key="VideoItemTemplate">
        <userControls:VideoItem Video="{Binding}" />
    </DataTemplate>

    <DataTemplate x:Key="VideoItemTemplateFixedSize">
        <userControls:VideoItem Video="{Binding}"
                                              Height="180"
                                              Width="246"/>
    </DataTemplate>

    <DataTemplate x:Key="ShowItem">
        <userControls:ShowItem TVShow="{Binding}" />
    </DataTemplate>
</ResourceDictionary>
